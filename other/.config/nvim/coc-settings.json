{
    "inlayHint": false,
    "suggest.noselect": true,
    "coc.preferences.formatOnSaveFiletypes": [ "go", "rust", "kotlin", "sql" ],

    "go.goplsPath": "/home/linuxbrew/.linuxbrew/bin/gopls",
    "go.goplsOptions": {
        "gofumpt": true
    },

    "rust-analyzer.serverPath": "/home/linuxbrew/.linuxbrew/bin/rust-analyzer",
    "rust-analyzer.inlayHints.chainingHints": false,
    "rust-analyzer.cargo.loadOutDirsFromCheck": true,
    "rust-analyzer.procMacro.enable": true,

    "python.analysis.typeCheckingMode": "basic",
    "pyright.disableDiagnostics": false,
    "pyright.organizeimports.provider": "isort",
    "python.linting.mypyEnabled": false,
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,

    "sql.database": "mysql",
    "sql.formatOptions": {
        "language": "mysql",
        "dialect": "mysql",
        "keywordCase": "upper",
        "tabWidth": 4
    },

    "languageserver": {
      "kotlin": {
        "command": "/home/ay/projects/personal/kotlin-language-server/server/build/install/server/bin/kotlin-language-server",
        "filetypes": ["kotlin"]
      }
    }
}
