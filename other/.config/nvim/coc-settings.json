{
    "coc.preferences.formatOnSaveFiletypes": [ "go", "python", "rust" ],

    "go.goplsPath": "/home/linuxbrew/.linuxbrew/bin/gopls",
    "go.goplsOptions": {
        "gofumpt": true
    },

    "rust-analyzer.serverPath": "/home/linuxbrew/.linuxbrew/bin/rust-analyzer",
    "rust-analyzer.inlayHints.chainingHints": false,
    "rust-analyzer.cargo.loadOutDirsFromCheck": true,
    "rust-analyzer.procMacro.enable": true,

    "python.formatting.provider": "black",
    "python.linting.mypyEnabled": true,
    "python.linting.flake8Enabled": true,
    "pyright.organizeimports.provider": "isort"
}
