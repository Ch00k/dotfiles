{
    "inlayHint": false,
    "suggest.noselect": true,
    "coc.preferences.formatOnSaveFiletypes": [ "go", "rust", "kotlin", "sql", "html", "css", "javascript", "markdown"],
    "hover.floatConfig.border": true,
    "diagnostic.floatConfig.border": true,
    "suggest.floatConfig.border": true,
    "signature.floatConfig.border": true,

    "go.goplsPath": "/home/linuxbrew/.linuxbrew/bin/gopls",
    "go.goplsOptions": {
        "gofumpt": true
    },

    "rust-analyzer.serverPath": "/home/linuxbrew/.linuxbrew/bin/rust-analyzer",
    "rust-analyzer.inlayHints.chainingHints": false,
    "rust-analyzer.cargo.loadOutDirsFromCheck": true,
    "rust-analyzer.procMacro.enable": true,

    "python.analysis.typeCheckingMode": "basic",
    "pyright.disableDiagnostics": false,
    "pyright.organizeimports.provider": "ruff",
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "ruff",
    "python.linting.ruffEnabled": true,

    "htmldjango.djlint.formatCss": true,
    "htmldjango.djlint.formatJs": true,
    "htmldjango.djlint.addLinterArgs": ["--max-line-length", "250"],

    "eslint.run": "onSave",
    "eslint.autoFixOnSave": true,
    "eslint.format.enable": true,

    "biome.requireConfiguration": false,

    "sql.database": "mysql",
    "sql.formatOptions": {
        "language": "mysql",
        "dialect": "mysql",
        "keywordCase": "upper",
        "tabWidth": 4
    },

    "languageserver": {
      "kotlin": {
        "command": "/home/ay/projects/personal/kotlin-language-server/server/build/install/server/bin/kotlin-language-server",
        "filetypes": ["kotlin"],
        "settings": {
          "kotlin.formatting.formatter": "none"
        }
      }
    },
    "kotlin.formatting.formatter": "none"
}
